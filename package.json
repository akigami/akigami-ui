{
  "name": "akigami-ui",
  "version": "1.0.8",
  "description": "Made with create-react-library",
  "author": "Yukioru",
  "license": "MIT",
  "repository": "akigami/akigami-ui",
  "main": "dist/index.js",
  "umd:main": "dist/index.umd.js",
  "module": "dist/index.modern.js",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production microbundle-crl --format modern,cjs,umd",
    "watch": "cross-env NODE_ENV=development microbundle-crl watch --no-compress --format modern,cjs,umd",
    "storybook": "cd docs && npm start",
    "start": "run-p watch storybook",
    "prepare": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint .",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "predeploy": "cd docs && npm install && npm run build",
    "deploy": "gh-pages -d docs/storybook-static",
    "postinstall": "cd docs && npm install"
  },
  "peerDependencies": {
    "react": "^16.0.0",
    "prop-types": "^15.7.2",
    "styled-components": "^5.3.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "babel-plugin-styled-components": "^1.12.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-standard": "^4.0.1",
    "gh-pages": "^2.2.0",
    "microbundle-crl": "^0.13.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-is": "^16.13.1",
    "react-scripts": "^3.4.1",
    "styled-components": "^5.3.0"
  },
  "files": [
    "dist"
  ]
}
